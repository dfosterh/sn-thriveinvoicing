        <order>200</order>
        <script><![CDATA[var customers = new GlideRecord('customer_account');
customers.addQuery('customer', true);
customers.query();
//and by all Service Locations in contracts

var addCount = 0;
while(customers.next()) {
	var invoice = new GlideRecord('x_175353_thriveinv_invoices');
	invoice.addQuery('invoice_type', 'MRRP');
	invoice.addQuery('customer', customers.sys_id);
	invoice.query();
	
	if(!invoice.next()) {
		var newInvoice = new GlideRecord('x_175353_thriveinv_invoices');
		newInvoice.initialize();
		newInvoice.customer = customers.sys_id;
		newInvoice.invoice_type = 'MRRP';
		newInvoice.invoice_date = new GlideDate();
		newInvoice.insert();

		addCount += 1;
	}
}
gs.addInfoMessage(gs.getMessage('Created {0} new invoices', [addCount.toString()]));
]]></script>
